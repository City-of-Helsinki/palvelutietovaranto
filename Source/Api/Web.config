<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
    <section name="entityFramework" type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
    <section name="postgreSql" type="Affecto.EntityFramework.PostgreSql.PostgreSqlConfiguration, Affecto.EntityFramework.PostgreSql" requirePermission="false" />
    <section name="authenticationServer" type="ServiceRegister.Api.Authentication.AuthenticationServerConfiguration, ServiceRegister.Api" />
  </configSections>
  
  <appSettings>
    <add key="useMockDatabase" value="false" />
    <add key="requireHttps" value="true" />
  </appSettings>

  <authenticationServer configSource="Authentication.config" />
  
  <postgreSql configSource="DatabaseSchemas.config" />
  
  <connectionStrings configSource="DatabaseConnectionStrings.config" />  

  <system.web>
    <authentication mode="None" />
    <compilation debug="true" targetFramework="4.6" />
    <httpRuntime targetFramework="4.6" />
  </system.web>
  
  <system.webServer>
    <modules>
      <remove name="FormsAuthentication" />
    </modules>
    <handlers>
      <remove name="ExtensionlessUrlHandler-Integrated-4.0" />
      <remove name="OPTIONSVerbHandler" />
      <remove name="TRACEVerbHandler" />
      <add name="ExtensionlessUrlHandler-Integrated-4.0" path="*." verb="*" type="System.Web.Handlers.TransferRequestHandler" preCondition="integratedMode,runtimeVersionv4.0" />
    </handlers>
  </system.webServer>

  <entityFramework>
    <providers>
      <provider invariantName="Npgsql" type="Npgsql.NpgsqlServices, EntityFramework6.Npgsql" />
    </providers>
    <defaultConnectionFactory type="Npgsql.NpgsqlConnectionFactory, EntityFramework6.Npgsql" />
  </entityFramework>
  
  <system.data>
    <DbProviderFactories>
      <remove invariant="Npgsql" />
      <add name="Npgsql Data Provider" invariant="Npgsql" support="FF" description=".Net Framework Data Provider for Postgresql" type="Npgsql.NpgsqlFactory, Npgsql" />
    </DbProviderFactories>
  </system.data>

  <log4net debug="false">
    <appender name="EventLogAppender" type="log4net.Appender.EventLogAppender">
      <threshold value="ERROR" />
      <param name="LogName" value="Application" />
      <param name="ApplicationName" value="Service Register Web Api" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-8level - %P{CallerId} %P{CorrelationId} - %logger - %message%newline" />
      </layout>
    </appender>
    <appender name="TextFileLogger" type="log4net.Appender.RollingFileAppender">
      <file value="C:\Temp\Logs\ServiceRegister.Api.log" />
      <immediateFlush value="true" />
      <preserveLogFileNameExtension value="true" />
      <threshold value="VERBOSE" />
      <appendToFile value="true" />
      <maximumFileSize value="2000KB" />
      <maxSizeRollBackups value="2" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-8level - %P{CallerId} %P{CorrelationId} - %logger - %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="ALL" />
      <appender-ref ref="TextFileLogger" />
      <appender-ref ref="EventLogAppender" />
    </root>
  </log4net>
  
